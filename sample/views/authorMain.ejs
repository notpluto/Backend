<!DOCTYPE html>
<html>
  <head>
    <title>Authors listed</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous"> 
  </head>
  <body>
    <% include partials/author-header.ejs %>
    <div class="page-head">
      <h1>Dashboard</h1>
      <div class="author-info">
        <div class="auth-name">Hello <%= author.name %>!</div>
        <p><img class="user-img" src= "<%= author.photo %>" width="30px" height="30px" ></p>
      </div>
      <!-- <a class="back" href="/users/">Back</a> -->
    </div>
    <a href="/books/new" class="add-author">Add Books</a>
    <ul class="book-list">
      <% books.forEach(ele => { %>
      <li>
        <a href='/books/<%= ele.id %>'>
          <div class="author-card">
            <p><small>Books:<br></small> <%= ele.title %></p>
            <!-- <p><small>Books:<br></small><%= author.books.length %></p> -->
            <div class="modify-icons">
              <div><a href='/users/<%= author.id %>/delete'><i class="fas fa-trash-alt"></i></a></div>
            </div>
          </div>
        </a>
     </li>
      <% }) %>
    </ul> 
    <% include partials/footer.ejs %>
  </body>
</html>
