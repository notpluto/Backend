<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  </head>
  <body>
    <% include partials/header.ejs %>
    <div class="page-head">
      <h1>User Dashboard</h1>
      <a class="back" href="/users/info">Back</a>
    </div>
    <div class="greet">Hello <%= user.name %>!</div>
    <!-- <div>You have no purchased book yet.</div> -->
    <!-- <a href="/author/add" class="add-author">Add User</a> -->
    <% if(cart.products) { %>
    <div style= "margin-left: 30px"> You have following books in your cart:</div>
      <ul class="book-list">
      <% cart.products.forEach(ele => {%>
        <li>
          <div class="user-card"> 
            <p><small>Book:<br></small> <%= ele.bookId.title %></p> 
            <p><small>Author:<br></small> <%= ele.bookId.author.name %></p>
            <p><small>Quantity:<br></small> <%= ele.quantity %></p>
            <p><small>Price:<br></small> <%= ele.bookId.price %></p>
            <!-- <p><small>Quantity:<br></small> <%= ele.quantity %></p> -->

            <div class="modify-icons">
              <div><a href='/users/<%= ele.id %>/delete'><i class="fas fa-trash-alt"></i></a></div>
            </div>
          </div>
          </a>
        </li>
      <% }) %>
      </ul>
    <% } else { %> 
      <div>You have no purchased book yet.</div>
    <% }%>
    <% include partials/footer.ejs %>
  </body>
</html>
